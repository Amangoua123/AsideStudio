---
const { label } = Astro.props;
---

<div class="mt-24 cursor-pointer anim-text">
  <span
    class="uppercase mx-auto max-w-fit border-b text-btn font-medium flex justify-center items-center gap-1"
  >
    <slot />
    <svg
      class="w-4 h-4 text-gray-800 dark:text-white"
      aria-hidden="true"
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
    >
      <path
        stroke="currentColor"
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M19 12H5m14 0-4 4m4-4-4-4"></path>
    </svg>
  </span>
</div>
